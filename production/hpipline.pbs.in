# file names
datadir="/users/gfilion/mcorrales/HPIP"
genome="$datadir/dm4R6/dmel-all-chromosome-r6.15.fasta"
prom_bcd="$datadir/libraries/prom_bcd.p"
iPCR_fwd="HPIP_iPCR_@REP@_fwd.fastq"
iPCR_rev="HPIP_iPCR_@REP@_Rev.fastq"
cDNA="HPIP_cDNA_@REP@.fastq"
gDNA="HPIP_gDNA_@REP@.fastq"

# source cluster environment
source $HOME/.cluster_env

# activate python virtual environment
workon cpython2711

# python environment
export PYTHONPATH=$HOME/soft/python

# run
python hpipline.py $iPCR_fwd $iPCR_rev $prom_bcd $genome $cDNA $gDNA 

# deactivate python virtual environment
deactivate
